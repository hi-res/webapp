doctype html

html(class="#{locals.namespace}")

	head
		title webapp

		if locals.production
			link( rel='stylesheet', href='/css/app.min.#{locals.version}.css' )
			link( rel="stylesheet", href="/css/sprite.min.#{locals.version}.css" )
			script( src='/js/vendor.min.#{locals.version}.js')
		else
			link( rel='stylesheet', href='/css/app.css' )
			link( rel="stylesheet", href="/css/sprite.css" )
			script( src='/js/vendor.js' )

		script.
			var env = {
				DEBUG: #{locals.debug},
				BASE_PATH: '',
			};

	body

		nav
			ul
				li: a(href="/") Home
				li: a(href="/about") About

		main#main

			block content


	footer#footer

	script.
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', '#{locals.env.ga_property}', 'auto');
		ga('send', 'pageview');

	if locals.production
		script( src='/js/app.min.#{locals.version}.js' )
	else
		script( src='/js/app.js' )